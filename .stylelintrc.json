{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-bem"
    ],
    "plugins": ["stylelint-selector-bem-pattern"],
    "rules": {
      "plugin/selector-bem-pattern": {
        "componentName": "[A-Z]+",
        "componentSelectors": {
          "initial": "^\\.{componentName}(?:__[a-z]+(?:-[a-z]+)*)?(?:--[a-z]+(?:-[a-z]+)*)?$"
        }
      },
      "selector-class-pattern": null
    }
  }